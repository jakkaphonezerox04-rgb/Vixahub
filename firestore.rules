rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // VIXAHUB Main Website Users
    // ========================================
    match /users/{userId} {
      // Allow authenticated users to read/write their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow user to create their own profile during registration
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // ========================================
    // Cloned Sites - All Collections
    // ========================================
    match /cloned_sites/{siteId}/{document=**} {
      // Allow read/write for all cloned site data
      // เปิดกว้างเพื่อให้ทุกคนสามารถใช้งานได้
      allow read, write: if true;
    }
    
    // ========================================
    // Websites Collection (for storing created websites info)
    // ========================================
    match /websites/{websiteId} {
      // Allow anyone to read website info (for public access to cloned sites)
      allow read: if true;
      
      // Allow authenticated users to create their own website
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow owner to update/delete their website
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // Credit Transactions
    // ========================================
    match /credit_transactions/{transactionId} {
      // Allow authenticated users to read their own transactions
      allow read: if request.auth != null;
      
      // Only allow creation through backend/cloud functions
      allow create: if request.auth != null;
      
      // Prevent updates and deletes
      allow update, delete: if false;
    }
  }
}



