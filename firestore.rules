rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to websites collection
    match /websites/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to cloned_sites collection
    match /cloned_sites/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to users collection
    match /users/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to all other collections (for development)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}